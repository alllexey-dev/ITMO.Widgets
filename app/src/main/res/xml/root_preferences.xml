<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        app:fragment="dev.alllexey.itmowidgets.ui.settings.AccountSettingsFragment"
        app:icon="@drawable/ic_account_circle"
        app:summary="Настройка данных для MyITMO и сервисов"
        app:title="Аккаунт" />

    <Preference
        app:fragment="dev.alllexey.itmowidgets.ui.settings.ScheduleWidgetSettingsFragment"
        app:icon="@drawable/ic_event_note"
        app:summary="Настройки виджета с парами"
        app:title="Виджет с расписанием" />

    <Preference
        app:fragment="dev.alllexey.itmowidgets.ui.settings.QrWidgetSettingsFragment"
        app:icon="@drawable/ic_qr_code"
        app:summary="Настройки виджета с QR-кодом"
        app:title="Виджет с QR-пропуском" />

    <PreferenceCategory
        app:icon="@drawable/ic_outline_build_circle"
        app:title="Синхронизация и отладка">

        <Preference
            app:icon="@drawable/ic_history"
            app:key="last_update_timestamp"
            app:summary="Виджеты пока не обновлялись"
            app:title="Последнее обновление" />

        <Preference
            app:icon="@drawable/ic_refresh"
            app:key="trigger_update_button"
            app:summary="Синхронизировать все виджеты"
            app:title="Принудительное обновление" />

        <EditTextPreference
            app:key="error_log"
            app:summary="Для быстрой диагностики"
            app:title="Журнал ошибок"
            app:useSimpleSummaryProvider="false" />
    </PreferenceCategory>
</PreferenceScreen>