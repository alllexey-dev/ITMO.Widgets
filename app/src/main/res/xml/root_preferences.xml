<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Аккаунт">

        <EditTextPreference
            app:key="refresh_token"
            app:title="Refresh Token"
            app:summary="Вставьте сюда refresh_token"
            app:useSimpleSummaryProvider="true"
            app:icon="@drawable/outline_code_blocks_24"/>

        <Preference
            app:key="refresh_token_expires"
            app:isPreferenceVisible="false" />

    </PreferenceCategory>


    <PreferenceCategory app:title="Настройки виджетов">

        <SwitchPreference
            app:key="smart_scheduling"
            app:title="Оптимальное обновление"
            app:summary="Виджет обновится только при изменении данных"
            app:defaultValue="true"/>

        <SwitchPreference
            app:key="beforehand_scheduling"
            app:title="Обновление заранее"
            app:summary="За 15 минут до конца пары виджет начнёт показывать следующую"
            app:defaultValue="true"/>

        <Preference
            app:key="last_update_timestamp"
            app:title="Последнее обновление"
            app:summary="Обновлений пока не было"
            app:icon="@drawable/outline_info_24" />


        <Preference
            app:key="trigger_update_button"
            app:title="Обновить виджеты"
            app:summary="Моментально обновить все виджеты"
            app:icon="@drawable/outline_build_circle_24" />
    </PreferenceCategory>
</PreferenceScreen>