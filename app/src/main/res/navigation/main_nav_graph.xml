<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/navigation_schedule">

    <fragment
        android:id="@+id/navigation_web"
        android:name="dev.alllexey.itmowidgets.ui.web.WebFragment"
        android:label="Web page"
        tools:layout="@layout/fragment_web" />

    <fragment
        android:id="@+id/navigation_qr_code"
        android:name="dev.alllexey.itmowidgets.ui.qr.QrCodeFragment"
        android:label="Qr code"
        tools:layout="@layout/fragment_qr" />

    <fragment
        android:id="@+id/navigation_schedule"
        android:name="dev.alllexey.itmowidgets.ui.schedule.ScheduleFragment"
        android:label="Schedule"
        tools:layout="@layout/fragment_schedule" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="dev.alllexey.itmowidgets.ui.settings.RootSettingsFragment"
        android:label="Settings" />

</navigation>