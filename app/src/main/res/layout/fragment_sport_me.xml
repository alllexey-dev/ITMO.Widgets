<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sport.me.SportMeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/pointsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <include
                    android:id="@+id/progressCircle"
                    layout="@layout/component_sport_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <ImageView
                    android:id="@+id/attendanceIndicator"
                    android:layout_width="8dp"
                    android:layout_height="20dp"
                    android:src="@drawable/indicator_circle"
                    app:tint="?colorTertiary"
                    app:layout_constraintStart_toEndOf="@id/progressCircle"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="16dp"
                    android:paddingTop="12dp"/>

                <TextView
                    android:id="@+id/attendancePointsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    android:textStyle="bold"
                    tools:text="30"
                    app:layout_constraintStart_toEndOf="@id/attendanceIndicator"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="6dp"/>

                <TextView
                    android:id="@+id/attendanceLabelTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="за посещение"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    app:layout_constraintStart_toEndOf="@id/attendancePointsTextView"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="6dp"
                    app:layout_constraintBaseline_toBaselineOf="@id/attendancePointsTextView" />

                <ImageView
                    android:id="@+id/bonusIndicator"
                    android:layout_width="8dp"
                    android:layout_height="26dp"
                    android:src="@drawable/indicator_circle"
                    app:tint="?colorSecondary"
                    app:layout_constraintStart_toStartOf="@id/attendanceIndicator"
                    app:layout_constraintTop_toBottomOf="@id/attendancePointsTextView"
                    android:paddingTop="18dp"/>

                <TextView
                    android:id="@+id/bonusPointsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    android:textStyle="bold"
                    tools:text="20"
                    app:layout_constraintStart_toStartOf="@id/attendancePointsTextView"
                    app:layout_constraintTop_toBottomOf="@id/attendancePointsTextView"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:id="@+id/bonusLabelTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="бонусы"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    app:layout_constraintStart_toEndOf="@id/bonusPointsTextView"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="6dp"
                    app:layout_constraintBaseline_toBaselineOf="@id/bonusPointsTextView" />

                <ImageView
                    android:id="@+id/needIndicator"
                    android:layout_width="8dp"
                    android:layout_height="26dp"
                    android:src="@drawable/indicator_circle"
                    app:tint="?colorSurfaceVariant"
                    app:layout_constraintStart_toStartOf="@id/bonusIndicator"
                    app:layout_constraintTop_toBottomOf="@id/bonusPointsTextView"
                    android:visibility="invisible"
                    android:paddingTop="18dp"/>

                <TextView
                    android:id="@+id/needPointsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    android:textStyle="bold"
                    tools:text="20"
                    app:layout_constraintStart_toStartOf="@id/bonusPointsTextView"
                    app:layout_constraintTop_toBottomOf="@id/bonusPointsTextView"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:id="@+id/needLabelTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="до зачёта"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    app:layout_constraintStart_toEndOf="@id/needPointsTextView"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="6dp"
                    app:layout_constraintBaseline_toBaselineOf="@id/needPointsTextView" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sportRecordsRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/pointsCard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_sport_record" />

        <TextView
            android:id="@+id/emptyStateTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="У вас нет актуальных записей на спорт"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="?android:attr/textColorSecondary"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/pointsCard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>